{
  "name": "powerbelt",
  "version": "0.0.0",
  "description": "JavaScript Utility Belt",
  "keywords": [
    "javascript",
    "utility"
  ],
  "homepage": "https://github.com/powerbelt/powerbelt#readme",
  "bugs": {
    "url": "https://github.com/powerbelt/powerbelt/issues"
  },
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "build": "babel ./src/lib -d dist --presets latest",
    "build:watch": "babel -w ./src/lib -d dist --presets latest",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test && nyc report",
    "coveralls": "npm run coverage | coveralls",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run test:unit && npm run lint",
    "test:unit": "NODE_ENV=test mocha './src/**/*.spec.js' --compilers js:babel-register",
    "test:unit:watch": "NODE_ENV=test mocha './src/**/*.spec.js' -w --compilers js:babel-register"
  },
  "repository": "git+https://github.com/powerbelt/powerbelt.git",
  "author": "Jesse Palmer <jesselpalmer@gmail.com> (http://jesselpalmer.com)",
  "contributors": [
    {
      "name": "Jesse Palmer",
      "email": "jesselpalmer@gmail.com",
      "url": "http://jesselpalmer.com"
    }
  ],
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "coveralls": "3.0.0",
    "istanbul": "0.4.5",
    "mocha": "4.1.0",
    "mocha-junit-reporter": "1.15.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "11.4.1",
    "prettier": "1.9.2",
    "standard": "10.0.3"
  },
  "xo": {
    "envs": [
      "jasmine"
    ]
  },
  "engines": {
    "node": ">=7.7.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "nyc": {
    "exclude": [
      "**/index.js*",
      "**/*.spec.js",
      "dist"
    ]
  }
}
